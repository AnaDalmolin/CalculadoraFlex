<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvGasolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Gasolina" />

    <EditText
        android:id="@+id/etGasolina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/valor_gasolina"
        android:importantForAutofill="no"
        android:inputType="numberSigned"
        android:labelFor="@id/tvGasolina" />

    <TextView
        android:id="@+id/tvEtanol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor Etanol" />

    <EditText
        android:id="@+id/etEtanol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/valor_etanol"
        android:importantForAutofill="no"
        android:inputType="number"
        android:labelFor="@id/tvEtanol" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado" />

    <EditText
        android:id="@+id/etResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:contentDescription="@string/resultado"
        android:inputType="textPersonName"
        android:labelFor="@id/tvResultado"
        android:text="" />


</LinearLayout>


